<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Store">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/points_label"
                android:layout_width="50pt"
                android:layout_height="match_parent"
                android:text="Points: "
                android:textAlignment="viewEnd"
                android:textSize="10pt"
                tools:layout_editor_absoluteX="156dp"
                tools:layout_editor_absoluteY="72dp"/>

            <TextView
                android:id="@+id/points_number"
                android:layout_width="35pt"
                android:layout_height="24dp"
                android:text="12"
                android:textAlignment="viewStart"
                android:textSize="10pt"
                tools:layout_editor_absoluteX="209dp"
                tools:layout_editor_absoluteY="68dp" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingTop="0dp"
        android:paddingRight="30dp"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center">


            <Button
                android:id="@+id/coupon1"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:text="Espresso"
                android:textAlignment="viewStart"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="125dp" />

            <TextView
                android:id="@+id/coupon1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textSize="18sp"
                tools:text="5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/coupon2"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:text="Americano"
                android:textAlignment="viewStart"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="203dp" />

            <TextView
                android:id="@+id/coupon2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textSize="18sp"
                tools:text="7" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/coupon3"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:text="Latte"
                android:textAlignment="viewStart"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="286dp" />

            <TextView
                android:id="@+id/coupon3_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textSize="18sp"
                tools:text="10" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/coupon4"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:text="Coffee and Pastry"
                android:textAlignment="viewStart"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="286dp" />

            <TextView
                android:id="@+id/coupon4_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textSize="18sp"
                tools:text="15" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/coupon5"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:text="Chocolate"
                android:textAlignment="viewStart"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="286dp" />

            <TextView
                android:id="@+id/coupon5_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textSize="18sp"
                tools:text="17" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/coupon6"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:text="Sandwich"
                android:textAlignment="viewStart"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="286dp" />

            <TextView
                android:id="@+id/coupon6_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textSize="18sp"
                tools:text="22" />

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>